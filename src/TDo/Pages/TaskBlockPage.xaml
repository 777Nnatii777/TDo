<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDo.Pages.TaskBlockPage"
             Title="TaskBlockPage"
             xmlns:vm="clr-namespace:TDo.ViewModels">
    <ContentPage.BindingContext>
        <vm:TaskBlockViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Tasks" FontSize="24" HorizontalOptions="Center" />

        <ListView ItemsSource="{Binding Tasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10" BackgroundColor="{Binding Color}">
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding Stage}" FontSize="12" TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>