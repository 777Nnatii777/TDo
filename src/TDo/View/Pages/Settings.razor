@page "/settings"
<div class="container py-4">
    <h3 class="text-primary">Settings</h3>
    <p class="text-muted">Configure application preferences and user settings.</p>

    <div class="card mb-3">
        <div class="card-header bg-warning text-dark">Account Settings</div>
        <div class="card-body">
            <p>Update your account information and preferences.</p>
            <button class="btn btn-primary me-2">Edit Profile</button>
            <button class="btn btn-danger">Change Password</button>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">Application Preferences</div>
        <div class="card-body">
            <p>Choose your preferred theme and notification settings.</p>
            <button class="btn btn-info me-2">Theme Settings</button>
            <button class="btn btn-secondary">Notification Preferences</button>
        </div>
    </div>
</div>
